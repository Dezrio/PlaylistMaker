<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Header-->
    <style name="HeaderFrame">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/header_height</item>
    </style>
    <style name="HeaderText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start|center</item>
        <item name="android:layout_marginStart">48dp</item>
        <item name="android:textColor">@color/text_main_night</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/btn_text_size</item>
    </style>
    <style name="HeaderImage">
        <item name="tint">@color/text_main_night</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start|center</item>
        <item name="android:src">@drawable/back_arrow</item>
    </style>
    <!--HeaderEnd-->

    <!--Main-->
    <style name="MainLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:backgroundTint">@color/background_main_night</item>
        <item name="android:padding">5dp</item>
    </style>
    <!--MainEnd-->

    <!--Settings-->
    <style name="Switch">
        <item name="trackTint">@color/switch_Track_Night</item>
        <item name="thumbTint">@color/switch_Thumb_Night</item>
    </style>
    <!--SettingsEnd-->
</resources>