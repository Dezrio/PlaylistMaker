<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--SecondLayout-->
    <style name="SecondLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">5dp</item>
    </style>
    <!--SecondLayoutEnd-->

    <!--Header-->
    <style name="HeaderFrame">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/header_height</item>
    </style>
    <style name="HeaderText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start|center</item>
        <item name="android:layout_marginStart">48dp</item>
        <item name="android:textColor">@color/text_main</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/btn_text_size</item>
    </style>
    <style name="HeaderImage">
        <item name="android:tint">@color/text_main</item>
        <item name="android:iconTint">@color/text_main</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start|center</item>
        <item name="android:src">@drawable/back_arrow</item>
    </style>
    <!--HeaderEnd-->

    <!--Main-->
    <style name="MainLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/background_main</item>
        <item name="android:backgroundTint">@color/background_main</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="MainButton" parent="Widget.MaterialComponents.Button">
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/btn_icon_padding</item>
        <item name="iconTint">@color/text_main</item>
        <item name="cornerRadius">@dimen/btn_corner_radius</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginHorizontal">@dimen/main_padding</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/btn_text_size</item>
        <item name="android:textColor">@color/text_main</item>
    </style>
    <!--MainEnd-->

    <!--Settings-->
    <style name="SettingsButtonFrame">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/btn_setting_height</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="SettingsButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start|center</item>
        <item name="android:layout_marginStart">@dimen/btn_icon_padding</item>
        <item name="android:textColor">?attr/android:textColor</item>
        <item name="android:textSize">@dimen/btn_text_size_min</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="SettingsButtonImage">
        <item name="android:tint">?attr/android:tint</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end|center</item>
        <item name="android:layout_marginEnd">@dimen/settings_icon_margin</item>
    </style>
    <style name="Switch">
        <item name="trackTint">@color/switch_Track</item>
        <item name="thumbTint">@color/switch_Thumb</item>
    </style>
    <!--SettingsEnd-->
</resources>