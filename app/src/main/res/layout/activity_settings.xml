<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    style="@style/SecondLayout"
    tools:context=".SettingsActivity">

    <FrameLayout
        style="@style/HeaderFrame">

        <ImageView
            android:id="@+id/settings_arrow_back"
            style="@style/HeaderImage"
            android:importantForAccessibility="no" />

        <TextView
            style="@style/HeaderText"
            android:text="@string/btn_settings" />
    </FrameLayout>

    <FrameLayout
        style="@style/SettingsButtonFrame"
        android:layout_marginTop="24dp">

        <TextView
            style="@style/SettingsButton"
            android:text="@string/btn_dark_theme"  />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/smThemeSwitch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end|center"
            android:layout_marginEnd="@dimen/btn_icon_padding"
            android:theme="@style/Switch"/>
    </FrameLayout>

    <FrameLayout
        style="@style/SettingsButtonFrame">

        <TextView
            style="@style/SettingsButton"
            android:text="@string/btn_share"  />

        <ImageView
            android:id="@+id/share"
            style="@style/SettingsButtonImage"
            android:importantForAccessibility="no"
            android:src="@drawable/share" />
    </FrameLayout>

    <FrameLayout
        style="@style/SettingsButtonFrame">

        <TextView
            style="@style/SettingsButton"
            android:text="@string/btn_support" />

        <ImageView
            android:id="@+id/support"
            style="@style/SettingsButtonImage"
            android:importantForAccessibility="no"
            android:src="@drawable/support" />
    </FrameLayout>

    <FrameLayout
        style="@style/SettingsButtonFrame">

        <TextView
            style="@style/SettingsButton"
            android:text="@string/btn_user_agreement"  />

        <ImageView
            android:id="@+id/arrow_forward"
            style="@style/SettingsButtonImage"
            android:importantForAccessibility="no"
            android:src="@drawable/arrow_forward" />
    </FrameLayout>
</LinearLayout>